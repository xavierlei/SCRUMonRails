
<% provide(:title, 'add member') %>
<h1>add a member to the team <%=@team.name%></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for([@user, @project, @team, @role]) do |f| %>
      <%= render 'shared/error_messages' %>

      <div class="users-search">
        <b>Search user:</b>
        <input type='email' name='role[email]' id="users-search-txt" autofocus>
        <div class="search-results" id="users-search-results"></div>
      </div>

      <%= f.label :description %>
      <%= f.text_field :description %>
      <%= f.submit "Create team", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>


<script>
  new app.Users;
</script>
