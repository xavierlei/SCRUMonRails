<% provide(:title, 'add member') %>
<h1>add a member to the team <%=@team.name%></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for([@user, @project, @team, @role]) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :email %>
      <%= f.email_field :email %>
      <%= f.label :description %>
      <%= f.text_field :description %>
      <%= f.submit "Create team", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
