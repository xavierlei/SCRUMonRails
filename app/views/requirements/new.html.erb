<% provide(:title, 'new requirement') %>
<h1>Add a requirement</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for([@user,@project, @requirement]) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.text_area :description, placeholder: "write your project's new requirement here" %>
      <%= f.submit "add requirement", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
