<li id ="project-<%= project.id%>" >
<%= link_to gravatar_for(project.user, size: 50), project.user %>
  <span class="name">Project name: <%=link_to project.name, user_project_path(project.user_id,project.id)%></span>
  <span class="user">Product Owner: <%= link_to project.user.name, project.user%></span>
  <span class="description"><%=project.description%></span>
  <span class="timestamp">Created at <%=project.created_at%></span>
  <span class = "edit_link">
    <%if @user == current_user && project.user_id == @user.id%>
      <ol>
        <%= link_to "edit", edit_user_project_path(project.user_id,project.id) %>
        <%= link_to 'delete', [project.user,project], method: :delete, data: {:confirm => 'Are you sure?'} %>
      </ol>
    <%end%>
  </span>
</li>
