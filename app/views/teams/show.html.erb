<% provide(:title, @team.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h3>
        <%= @team.name %> page
      </h3>
      <% if @user == current_user %>
        <ol><%= link_to "add member", new_user_project_team_role_path(@user.id,@project.id,@team.id) %></ol>
      <% end %>

      <%@team.roles.each do |role|%>
        <ol><h2><%=link_to role.user.name, user_path(role.user.id)%></h2> <%=role.description%></ol>
      <%end%>

    </section>
  </aside>
  <h3>this page will later include the team backlog</h3>
</div>
