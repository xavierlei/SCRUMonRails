<% provide(:title, 'new team') %>
<h1>Create a new team</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for([@user, @project, @team]) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.submit "Create team", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
